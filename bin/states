#!/usr/bin/env node

var requireLib = function(name) {
  return require(__dirname + '/../lib/' + name);
}

var Immutable = require('immutable');
var transitions = Immutable.fromJS(require(require('path').resolve(process.argv[2])).transitions);
var states = requireLib('states');

var graphviz = require('graphviz');
var g = graphviz.digraph("G");

function sanitize(string) {
  return string.replace(/([:{} "\[\]])/g, '\\$1');
}

function serialise(model) {
  return sanitize(model.sortBy(function(value, key) { return key; }).toString());
}

states(transitions).forEach(function(value, model) {
  var n1 = g.addNode(serialise(model));
  value.forEach(function(otherModel, edgeName) {
    var n2 = g.addNode(serialise(otherModel));
    g.addEdge(n1, n2)
      .set('label', edgeName);
  });
});

console.log(g.to_dot());
